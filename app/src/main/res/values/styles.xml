<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="input.outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/txt.h1.bold</item>
        <item name="shapeAppearance">@style/appearance.round.25</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="expandedHintEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="input.outline.menu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextAppearance">@style/txt.h4</item>
    </style>


    <style name="txt.family" parent="">
        <item name="android:fontFamily">@font/font_family</item>
        <item name="fontFamily">@font/font_family</item>
    </style>

    <style name="edt.latin.digits" parent="">
        <item name="fontFamily">@font/font_family</item>
    </style>

    <!-- normal -->

    <style name="txt.h00" parent="txt.family">
        <item name="android:textSize">11sp</item>
        <item name="fontWeight">200</item>
        <item name="android:textFontWeight" tools:targetApi="p">200</item>
    </style>

    <style name="txt.h0" parent="txt.family">
        <item name="android:textSize">12sp</item>
        <item name="fontWeight">200</item>
        <item name="android:textFontWeight" tools:targetApi="p">200</item>
    </style>

    <style name="txt.h1" parent="txt.family">
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">200</item>
        <item name="android:textFontWeight" tools:targetApi="p">200</item>
    </style>

    <style name="txt.h2" parent="txt.family">
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">200</item>
        <item name="android:textFontWeight" tools:targetApi="p">200</item>
    </style>

    <style name="txt.h3" parent="txt.family">
        <item name="android:textSize">18sp</item>
        <item name="fontWeight">200</item>
        <item name="android:textFontWeight" tools:targetApi="p">200</item>
    </style>

    <style name="txt.h4" parent="txt.family">
        <item name="android:textSize">22sp</item>
        <item name="fontWeight">200</item>
        <item name="android:textFontWeight" tools:targetApi="p">200</item>
    </style>

    <!-- light -->

    <style name="txt.h00.light" parent="txt.h00">
        <item name="android:textFontWeight" tools:targetApi="p">100</item>
    </style>

    <style name="txt.h0.light" parent="txt.h0">
        <item name="android:textFontWeight" tools:targetApi="p">100</item>
    </style>

    <style name="txt.h1.light" parent="txt.h1">
        <item name="android:textFontWeight" tools:targetApi="p">100</item>
    </style>

    <style name="txt.h5" parent="txt.family">
        <item name="android:textSize">24sp</item>
        <item name="fontWeight">200</item>
    </style>

    <!-- medium / bold-->

    <style name="txt.h00.medium" parent="txt.h00">
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="txt.h0.medium" parent="txt.h0">
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="txt.h1.medium" parent="txt.h1">
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="txt.h00.bold" parent="txt.h00">
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="txt.h0.bold" parent="txt.h0">
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="txt.h1.bold" parent="txt.h1">
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="txt.h2.medium" parent="txt.h2">
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="txt.h2.bold" parent="txt.h2">
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="txt.h3.medium" parent="txt.h3">
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="txt.h3.bold" parent="txt.h3">
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="txt.h4.medium" parent="txt.h4">
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="txt.h4.bold" parent="txt.h4">
        <item name="fontWeight">700</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
    </style>

    <style name="txt.h5.medium" parent="txt.h5">
        <item name="fontWeight">400</item>
    </style>

    <style name="txt.h5.bold" parent="txt.h5">
        <item name="fontWeight">700</item>
    </style>

    <style name="txt.title" parent="txt.h3">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="txt.desc" parent="txt.h2">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>


</resources>